doctype html
html(class='no-js')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    title Page Title

    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='css/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.13/angular.min.js')

  body
    .page
      .wrapper(ng-controller="Ctrl")
        header.header
          img.logo(src="img/my-logo.svg")
          nav.nav
            ul.nav-list
              li.nav-item
                a.nav-link(href="#") home
              li.nav-item
                a.nav-link(href="#") details
              li.nav-item
                a.nav-link(href="#") contact
              p yolo olo bolo holo folo molo cholo folo rolo
        main.main
          div#display-text.display-text {{text}}
          button.text-btn.edit-text Edit
        footer.footer
          input#text-input.edit-text(ng-model="text" placeholder="Here is my text")
          button#update-text-btn.text-btn.update-text Edit
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script window.jQuery || document.write('<script src="js/vendor/jquery-1.11.1.min.js"><\/script>')

    script(src='js/app.min.js')

    script.
      var displayText = $('#display-text');
      var textInput = $('#text-input');

      $('#update-text-btn').on('click'function(){
        var grabbedText = textInput.text();
        displayText.text(grabbedText);
      });
